<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee                              http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
        
    </welcome-file-list>
     <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>MyServlet.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StudyController</servlet-name>
        <servlet-class>MyServlet.StudyController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudyController</servlet-name>
        <url-pattern>/study</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EmailListServlet</servlet-name>
        <servlet-class>MyServlet.EmailListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmailListServlet</servlet-name>
        <url-pattern>/email</url-pattern>
    </servlet-mapping>
   
</web-app>
